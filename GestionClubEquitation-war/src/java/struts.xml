
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

    <constant name="struts.devMode" value="true" />
    
    <!-- Configuration for the default package. -->
    <package name="default" extends="struts-default">  
        
        <action name = "hello" 
            class = "actions.HelloWorldAction" 
            method = "execute">
            <result name = "success">/jsp/HelloWorld.jsp</result>
        </action>
        
        <action name = "goToAddActivite"
            class = "actions.AddActiviteAction"
            method= "prepare">
            <result name = "success">/jsp/creationActivite.jsp</result>
        </action>
        
        <action name = "creationActivite"
            class = "actions.AddActiviteAction"
            method= "execute">
            <result name = "success">index.jsp</result>
        </action>
        
        <action name = "goToAddCheval"
            class = "actions.AddAChevalAction"
            method= "prepare">
            <result name = "success">/jsp/creationCheval.jsp</result>
        </action>
        
        <action name = "creationCheval"
            class = "actions.AddAChevalAction"
            method= "execute">
            <result name = "success">index.jsp</result>
        </action>
        
    </package>
</struts>